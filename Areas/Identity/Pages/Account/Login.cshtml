@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Disable the default layout to use custom design
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>JobPortal — Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Log in to Elevate Workforce Solutions - Your trusted job portal in Nepal, connecting candidates with top employers." />
    <meta name="keywords" content="job portal, Nepal jobs, login, Elevate Workforce Solutions, career opportunities" />
    <meta name="author" content="Code Art Web Technologies" />
    <link rel="shortcut icon" href="ftco-32x32.png" />

    <link rel="stylesheet" href="~/HomeContent/css/custom-bs.css" />
    <link rel="stylesheet" href="~/HomeContent//css/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="~/HomeContent//css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="~/HomeContent//fonts/icomoon/style.css" />
    <link rel="stylesheet" href="~/HomeContent//fonts/line-icons/style.css" />
    <link rel="stylesheet" href="~/HomeContent//css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/HomeContent//css/animate.min.css" />
    <link rel="stylesheet" href="~/HomeContent//css/quill.snow.css" />
    <link rel="stylesheet" href="~/HomeContent//css/style.css" />

    <style>
        /* Your included styles from design */
        .login-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('/HomeContent/images/hero_1.jpg');
            background-size: cover;
            background-position: center;
            position: relative;
        }

            .login-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(101, 179, 56, 0.1);
                backdrop-filter: blur(6px);
            }

        .login-form {
            background: white;
            border-radius: 15px;
            padding: 3rem;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            max-width: 450px;
            width: 100%;
            position: relative;
            z-index: 1;
        }

            .login-form h2 {
                color: #333;
                text-align: center;
                margin-bottom: 2.5rem;
                font-weight: 700;
                font-size: 2rem;
            }

        .form-control {
            border-radius: 25px;
            padding: 14px 20px;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
            }

        .btn-login {
            border-radius: 25px;
            padding: 14px;
            background: #007bff;
            border: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: #0056b3;
                transform: translateY(-2px);
            }

        .form-group label {
            color: #555;
            font-weight: 500;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .forgot-password, .signup-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
        }

            .forgot-password a, .signup-link a {
                color: #007bff;
                text-decoration: none;
            }

                .forgot-password a:hover, .signup-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="site-wrap">
        <header class="site-navbar mt-3">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="site-logo col-6"><a asp-page="/Index">JobPortal</a></div>
                </div>
            </div>
        </header>

        <section class="login-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="login-form">
                            <h2>Log In to Your Account</h2>
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-group mb-3">
                                    <label asp-for="Input.Email">Email Address</label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Input.Password">Password</label>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check mb-3">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                </div>

                                <div class="form-group text-center">
                                    <button id="login-submit" type="submit" class="btn btn-login btn-block text-white">Log In</button>
                                </div>

                                <div class="forgot-password">
                                    <a asp-page="./ForgotPassword">Forgot Password?</a>
                                </div>
                                <div class="signup-link">
                                    <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
                                </div>
                                <div class="signup-link">
                                    <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="~/HomeContent//js/jquery.min.js"></script>
    <script src="~/HomeContent//js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeContent//js/isotope.pkgd.min.js"></script>
    <script src="~/HomeContent//js/stickyfill.min.js"></script>
    <script src="~/HomeContent//js/jquery.fancybox.min.js"></script>
    <script src="~/HomeContent//js/jquery.easing.1.3.js"></script>
    <script src="~/HomeContent//js/jquery.waypoints.min.js"></script>
    <script src="~/HomeContent//js/jquery.animateNumber.min.js"></script>
    <script src="~/HomeContent//js/owl.carousel.min.js"></script>
    <script src="~/HomeContent//js/quill.min.js"></script>
    <script src="~/HomeContent//js/bootstrap-select.min.js"></script>
    <script src="~/HomeContent//js/custom.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
