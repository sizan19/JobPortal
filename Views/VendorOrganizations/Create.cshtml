@model JobPortal.Models.ViewModels.VendororganizationVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-secondary text-white text-center">
                    <h5 class="mb-0">Create Organization</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="VendorName" class="form-label"></label>
                            <input asp-for="VendorName" class="form-control form-control-sm" placeholder="Organization Name" />
                            <span asp-validation-for="VendorName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VendorAddress" class="form-label"></label>
                            <input asp-for="VendorAddress" class="form-control form-control-sm" placeholder="Organization Address" />
                            <span asp-validation-for="VendorAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VendorContact" class="form-label"></label>
                            <input asp-for="VendorContact" class="form-control form-control-sm" placeholder="Contact Number" />
                            <span asp-validation-for="VendorContact" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VendorEmail" class="form-label"></label>
                            <input asp-for="VendorEmail" class="form-control form-control-sm" placeholder="Email Address" />
                            <span asp-validation-for="VendorEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VendorImage" class="form-label"></label>
                            <input type="file" name="file" class="form-control form-control-sm" />
                            <span asp-validation-for="VendorImage" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-sm">Create</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-2">
                    <div class="small">
                        <a asp-controller="Account" asp-action="Login">Have an account? Go to login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
