@model JobPortal.Models.ViewModels.JobdescriptionVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-hero overlay inner-page bg-image"
         style="background-image: url('/HomeContent/images/hero_1.jpg');"
         id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">@Model.JobPositions</h1>
                <div class="custom-breadcrumbs">
                    <a href="/">Home</a> <span class="mx-2 slash">/</span>
                    <a href="/JobDescription">Job</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>@Model.JobPositions</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-md-2 text-center">
                <img src="@(string.IsNullOrEmpty(Model.VendorImage) ? Url.Content("~/homecontent/images/default_logo.png") : Model.VendorImage)"
                     alt="Company Logo" class="img-fluid rounded shadow-sm" style="max-width: 100px;">
            </div>
            <div class="col-md-7">
                <h2 class="font-weight-bold mb-1">@Model.JobPositions</h2>
                <div class="mb-2">
                    <span class="badge badge-primary">@Model.CategoryName</span>
                    <span class="mx-2"><span class="icon-briefcase mr-1"></span>@Model.VendorName</span>
                    <span class="mx-2"><span class="icon-room mr-1"></span>@Model.Location</span>
                    <span class="mx-2">
                        <span class="icon-clock-o mr-1"></span>
                        <span class="badge @(Model.JobType == "Full Time" ? "badge-success" : "badge-danger")">@Model.JobType</span>
                    </span>
                </div>
            </div>
            <div class="col-md-3 text-md-right mt-3 mt-md-0">
                <a href="#" class="btn btn-outline-secondary mb-2"><span class="icon-heart-o text-danger"></span> Save Job</a>
                <a href="#" class="btn btn-primary mb-2">Apply Now</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h3 class="h5 text-primary mb-3"><span class="icon-align-left mr-2"></span>Job Description</h3>
                        <p>@Model.Description</p>

                        <div class="row mt-4">
                            <div class="col-md-6 mb-2">
                                <strong>Experience:</strong> @Model.Experience
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Vacancy:</strong> @Model.JobVacancy
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Salary:</strong> @Model.MinSalary - @Model.MaxSalary
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Deadline:</strong> @Model.DeadlineDate?.ToString("yyyy-MM-dd")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="bg-light p-3 border rounded mb-4">
                    <h4 class="text-primary h5 mb-3">Job Summary</h4>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><strong class="text-black">Company:</strong> @Model.VendorName</li>
                        <li class="mb-2"><strong class="text-black">Location:</strong> @Model.Location</li>
                        <li class="mb-2"><strong class="text-black">Vacancy:</strong> @Model.JobVacancy</li>
                        <li class="mb-2"><strong class="text-black">Type:</strong> @Model.JobType</li>
                        <li class="mb-2"><strong class="text-black">Experience:</strong> @Model.Experience</li>
                        <li class="mb-2"><strong class="text-black">Salary:</strong> @Model.MinSalary - @Model.MaxSalary</li>
                        <li class="mb-2"><strong class="text-black">Application Deadline:</strong> @Model.DeadlineDate?.ToString("yyyy-MM-dd")</li>
                        <li class="mb-2"><strong class="text-black">Category:</strong> @Model.CategoryName</li>
                    </ul>
                </div>
                <div class="bg-light p-3 border rounded">
                    <h4 class="text-primary h5 mb-3">Share</h4>
                    <div>
                        <a href="#" class="pr-3"><span class="icon-facebook"></span></a>
                        <a href="#" class="pr-3"><span class="icon-twitter"></span></a>
                        <a href="#" class="pr-3"><span class="icon-linkedin"></span></a>
                        <a href="#" class="pr-3"><span class="icon-pinterest"></span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>