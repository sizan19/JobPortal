@model JobPortal.Models.ViewModels.JobdescriptionVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-secondary text-white text-center">
                    <h5 class="mb-0">Edit Job Description</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label small fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control form-control-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyName" class="form-label small fw-semibold"></label>
                                <input asp-for="CompanyName" class="form-control form-control-sm" />
                                <span asp-validation-for="CompanyName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label small fw-semibold"></label>
                                <input asp-for="Location" class="form-control form-control-sm" />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="JobType" class="form-label small fw-semibold"></label>
                                <input asp-for="JobType" class="form-control form-control-sm" />
                                <span asp-validation-for="JobType" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="JobPositions" class="form-label small fw-semibold"></label>
                                <input asp-for="JobPositions" class="form-control form-control-sm" />
                                <span asp-validation-for="JobPositions" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="JobVacancy" class="form-label small fw-semibold"></label>
                                <input asp-for="JobVacancy" class="form-control form-control-sm" />
                                <span asp-validation-for="JobVacancy" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="MinSalary" class="form-label small fw-semibold"></label>
                                <input asp-for="MinSalary" class="form-control form-control-sm" />
                                <span asp-validation-for="MinSalary" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="MaxSalary" class="form-label small fw-semibold"></label>
                                <input asp-for="MaxSalary" class="form-control form-control-sm" />
                                <span asp-validation-for="MaxSalary" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Experience" class="form-label small fw-semibold"></label>
                                <input asp-for="Experience" class="form-control form-control-sm" />
                                <span asp-validation-for="Experience" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DeadlineDate" class="form-label small fw-semibold"></label>
                                <input asp-for="DeadlineDate" type="date" class="form-control form-control-sm" />
                                <span asp-validation-for="DeadlineDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label small fw-semibold"></label>
                                <input asp-for="CategoryId" class="form-control form-control-sm" />
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="VendorId" class="form-label small fw-semibold"></label>
                                <input asp-for="VendorId" class="form-control form-control-sm" />
                                <span asp-validation-for="VendorId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="VendorName" class="form-label small fw-semibold"></label>
                                <input asp-for="VendorName" class="form-control form-control-sm" />
                                <span asp-validation-for="VendorName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryName" class="form-label small fw-semibold"></label>
                                <input asp-for="CategoryName" class="form-control form-control-sm" />
                                <span asp-validation-for="CategoryName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">Back to List</a>
                            <button type="submit" class="btn btn-primary btn-sm px-4">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
