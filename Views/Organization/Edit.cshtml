@model JobPortal.Models.ViewModels.OrganizationVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-secondary text-white text-center">
                    <h5 class="mb-0">Edit Organization</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <input asp-for="OrganizationId" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="OrgName" class="form-label small fw-semibold"></label>
                            <input asp-for="OrgName" class="form-control form-control-sm" />
                            <span asp-validation-for="OrgName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrgAddress" class="form-label small fw-semibold"></label>
                            <input asp-for="OrgAddress" class="form-control form-control-sm" />
                            <span asp-validation-for="OrgAddress" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrgContact" class="form-label small fw-semibold"></label>
                            <input asp-for="OrgContact" class="form-control form-control-sm" />
                            <span asp-validation-for="OrgContact" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrgEmail" class="form-label small fw-semibold"></label>
                            <input asp-for="OrgEmail" class="form-control form-control-sm" />
                            <span asp-validation-for="OrgEmail" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrgImage" class="form-label small fw-semibold"></label><br />
                            @if (!string.IsNullOrEmpty(Model.OrgImage))
                            {
                                <img src="@Model.OrgImage" alt="Organization Image" class="img-thumbnail mb-2" style="width: 80px; height: 80px;" />
                            }
                            <input type="file" name="file" class="form-control form-control-sm" />
                            <span asp-validation-for="OrgImage" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">Back to List</a>
                            <button type="submit" class="btn btn-primary btn-sm px-4">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

