@model JobPortal.Models.ViewModels.OrganizationVM

@{
    ViewData["Title"] = "Organizations";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int i = 1;
}

<div class="container py-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Organization List</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">+ Create New</a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>SN</th>
                        <th>@Html.DisplayNameFor(model => model.OrgName)</th>
                        <th>@Html.DisplayNameFor(model => model.OrgAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.OrgContact)</th>
                        <th>@Html.DisplayNameFor(model => model.OrgEmail)</th>
                        <th>@Html.DisplayNameFor(model => model.OrgImage)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.OrganizationList != null && Model.OrganizationList.Any())
                    {
                        foreach (var item in Model.OrganizationList)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.OrgName</td>
                                <td>@item.OrgAddress</td>
                                <td>@item.OrgContact</td>
                                <td>@item.OrgEmail</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.OrgImage))
                                    {
                                        <img src="@item.OrgImage" alt="Org Image" style="width: 50px; height: 50px; object-fit: cover;" class="rounded" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.OrganizationId" class="btn btn-outline-primary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.OrganizationId" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No organizations found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
